{
	"apiVersion":"v1",
	"kind": "Pod",
	"metadata": {
		"name": "wildfly",
		"labels": {
			"name": "wildfly"
		}
	},
	"spec": {
		"containers": [{
			"name": "wildfly",
			"image": "arquillian:./src/test/resources/wildfly",
            "ports": [
                {
                    "hostPort": 8080,
                    "containerPort": 8080,
                    "protocol": "TCP"
                }
                {
                    "hostPort": 9990,
                    "containerPort": 9990,
                    "protocol": "TCP"
                }
            ]
		}]
	}
}